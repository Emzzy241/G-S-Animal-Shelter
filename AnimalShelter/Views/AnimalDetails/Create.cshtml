@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.AnimalDetail

<p><strong>NOTE:</strong> You need to have at least one Animal type before you can add an Animal Detail!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Animals") to create a Animal.</p>
<br />

<h4>Add a new Animal</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br/>
  <br/>

  @Html.LabelFor(model => model.Date_of_Admittance)
  @Html.TextBoxFor(model => model.Date_of_Admittance)
  <br/>
  <br/>
  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  <br/>
  <br/>

  <p>Add the Animal Type from the dropdown below:</p>
  @Html.LabelFor(model => model.Animal)
  @Html.DropDownList("AnimalId")

  <input type="submit" value="Add new Animal" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all Animals", "Index")</p>

